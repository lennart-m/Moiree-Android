<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/RootMenuCard"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            style="@style/MainMenuHeader"
            android:layout_width="match_parent"
            android:text="@string/app_name"/>

        <android.support.v7.widget.CardView
            android:id="@id/main_menu_moiree_image_card"
            style="@style/MainMenuButtonCard"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp">

            <!-- TODO das bild ist zu klein. sieht im querformat komisch aus (oder?) alternative: kind ist ein forceSquareImageView und das bild wird via tiling erzeugt -->

            <ImageView
                android:id="@id/main_menu_moiree_image_background1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@null"
                android:rotation="-3"
                android:scaleType="fitXY"/>

            <ImageView
                android:id="@id/main_menu_image_background2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@null"
                android:rotation="3"
                android:scaleType="fitXY"/>

            <TextView
                style="@style/MainMenuButtonCardText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/image"/>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@id/main_menu_colors_card"
            style="@style/MainMenuButtonCard"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="6dp">

            <ImageView
                android:id="@id/main_menu_colors_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@null"
                android:scaleType="centerCrop"/>

            <TextView
                style="@style/MainMenuButtonCardText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/colors"/>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@id/main_menu_transformation_card"
            style="@style/MainMenuButtonCard"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="6dp"
            android:rotation="-5"
            android:scaleX=".75"
            android:scaleY=".95">

            <TextView
                style="@style/MainMenuButtonCardText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/transformation"/>

        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@id/main_menu_settings"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/settings"
                android:src="@drawable/ic_settings"/>

            <ImageButton
                android:id="@id/main_menu_help"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/help"
                android:src="@drawable/ic_help"/>

            <ImageButton
                android:id="@id/main_menu_about"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/about"
                android:src="@drawable/ic_info"/>

        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>