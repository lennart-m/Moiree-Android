<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/expandable_view_header"
    style="@style/ExpandableHeader"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/expandable_view_header_title"
        style="@style/ExpandableHeaderTitle"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        tools:text="Title"/>

    <ImageView
        android:id="@+id/expandable_view_header_preview"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/color_preview_mask"
        android:contentDescription="@null"
        android:scaleType="center"/>

</LinearLayout>
