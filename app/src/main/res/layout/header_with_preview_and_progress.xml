<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:parentTag="LinearLayout">

    <TextView
        android:id="@+id/header_title"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginRight="@dimen/header_spacing"
        android:layout_marginEnd="@dimen/header_spacing"
        android:gravity="center_vertical"
        tools:text="Title"/>

    <FrameLayout
        android:layout_width="@dimen/header_preview_width"
        android:layout_height="@dimen/header_preview_height">

        <ImageView
            android:id="@+id/header_preview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/preview_border"
            android:contentDescription="@null"
            android:scaleType="center"/>

        <ProgressBar
            android:id="@+id/header_progress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:indeterminate="true"/>

    </FrameLayout>

</merge>
